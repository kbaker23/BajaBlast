"use strict";

//UI
var title_txt = null;
var loading_txt = null;
var playButton = null;

BasicGame.Preloader = function (game) {
	this.ready = false;
};

BasicGame.Preloader.prototype = {

	preload: function () {
        //Loading
        loading_txt = this.game.add.text(this.world.centerX, this.world.centerY, "Loading...", {font:gm.font, fill:"#000000"});
        setText(loading_txt, 100, '#FFFFFF', 'center');
        
        //Play button
        playButton = this.add.button(this.world.centerX, this.world.centerY, 'whiteButton', playGame, this);
        playButton.text = this.game.add.text(this.world.centerX, playButton.y, "Start", {font:gm.font, fill:"#FFFFFF"});
        setButton(playButton, playButton.text, 130, null);
        playButton.visible = false;
        playButton.text.visible = false;
        addButtonBounceTween(playButton, playButton.text);
        
        
        //Load Assets
        
        //Sound
        for (var i = 1; i < 5; i++) {
            this.load.audio('level' + i, 'assets/Sound/level' + i + '.mp3');
        }
        this.load.audio('angels', 'assets/Sound/angels.mp3');
        
        //Add universal sounds
        sfx.buttonClick = this.add.audio('buttonClick');
        sfx.whoosh = this.add.audio('whoosh');
        
        
        //Player
        
        
        //UI
        this.load.image('black', 'assets/black.png');
        this.load.image('redButton', 'assets/UI/redButton.png');
        this.load.image('logo', 'assets/UI/logo.png');
        this.load.image('mute', 'assets/UI/mute.png');
        
	},

	create: function () {

		//	Once the load has finished we disable the crop because we're going to sit in the update loop for a short while as the music decodes
		//this.preloadBar.cropEnabled = false;
	},

	update: function () {

		//	You don't actually need to do this, but I find it gives a much smoother game experience.
		//	Basically it will wait for our audio file to be decoded before proceeding to the MainMenu.
		//	You can jump right into the menu if you want and still play the music, but you'll have a few
		//	seconds of delay while the mp3 decodes - so if you need your music to be in-sync with your menu
		//	it's best to wait for it to decode here first, then carry on.
		
		//	If you don't have any music in your game then put the game.state.start line into the create function and delete
		//	the update function completely.
		
		if (this.ready == false)
		{
			this.ready = true;
            playButton.visible = true;
            playButton.text.visible = true;
            loading_txt.visible = false;
		}

	}

};

function playGame() {
    thisGame.state.start('Gameplay');
    sfx.buttonClick.play();
}
